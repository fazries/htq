<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/surah_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="#fff"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="#fff"
    android:layout_margin="0dp"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/rlLayout0"
        android:layout_width="match_parent"
        android:background="#F8ECC2"
        android:layout_height="78dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/rlLayout1">

            <TextView
                android:id="@+id/surah_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textStyle="bold" />

            <View
                android:id="@+id/myRectangleView"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#5e514b"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlLayout1"
            android:layout_toEndOf="@+id/rlLayout1">

            <RelativeLayout
                android:id="@+id/rlLayout2.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:id="@+id/surah_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"/>

                <!--<TextView-->
                    <!--android:id="@+id/surah_sparator"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toRightOf="@+id/surah_name"-->
                    <!--android:layout_marginLeft="3dp"-->
                    <!--android:textSize="18dp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:text="|"/>-->

                <TextView
                    android:id="@+id/surah_translate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/surah_name"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLayout2.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/surah_desc"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/surah_arabic"
                android:layout_centerInParent="true"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>